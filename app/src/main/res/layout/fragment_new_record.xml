<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_bg">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/header_new_record_view" />

    <ImageView
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="30dp"
        android:src="@drawable/login_dot_divider" />

    <EditText
        android:id="@+id/phone"
        android:layout_marginTop="20dp"
        style="@style/AppTheme.Profile.Field"
        tools:ignore="RtlHardcoded,TextFields"
        android:hint="Номер телефона"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="30dp"
        android:src="@drawable/login_dot_divider" />

    <EditText
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        style="@style/AppTheme.Profile.Field"
        tools:ignore="RtlHardcoded,TextFields"
        android:hint="Email"
        android:textColor="@color/colorAccent"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="30dp"
        android:src="@drawable/login_dot_divider" />

    <TextView
        android:id="@+id/service"
        android:layout_marginTop="20dp"
        style="@style/AppTheme.Profile.Field"
        tools:ignore="RtlHardcoded,TextFields"
        android:hint="Доп. услуги"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="30dp"
        android:src="@drawable/login_dot_divider" />

    <Spinner
        android:id="@+id/masters"
        android:layout_marginTop="20dp"
        style="@style/AppTheme.Profile.Field"
        tools:ignore="HardcodedText,RtlHardcoded,TextFields"
        android:spinnerMode="dialog"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="30dp"
        android:src="@drawable/login_dot_divider" />

    <EditText
        android:id="@+id/date"
        android:layout_marginTop="20dp"
        style="@style/AppTheme.Profile.Field"
        tools:ignore="RtlHardcoded,TextFields"
        android:hint="Дата записи"
        android:inputType="date"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="30dp"
        android:src="@drawable/login_dot_divider" />

    <EditText
        android:id="@+id/time"
        android:layout_marginTop="20dp"
        style="@style/AppTheme.Profile.Field"
        tools:ignore="RtlHardcoded,TextFields"
        android:hint="Время записи"
        android:inputType="time"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="50dp"
        android:src="@drawable/login_dot_divider" />


    <Button
        android:id="@+id/save_record"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="-24dp"
        android:layout_marginRight="84dp"
        android:text="Записаться"
        android:background="@drawable/login_button_enter_bg"
        android:textColor="@android:color/black"
        android:layout_gravity="center|bottom"
        />

    </LinearLayout>
</ScrollView>