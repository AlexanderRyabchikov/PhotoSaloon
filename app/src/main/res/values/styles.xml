<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/app_bg</item>
        <item name="actionOverflowMenuStyle">@style/popUpTheme</item>
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splashscreen_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="popUpTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat"/>

    <style name="AppTheme.ProfileDetail.Section" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.ProfileDetail.Section</item>
    </style>

    <style name="AppTheme.TextAppearance.ProfileDetail.Section" parent="AppTheme.TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Profile.Field" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Profile.Item</item>
        <item name="android:background">@color/dialog_text</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.TextAppearance.Profile.Item" parent="AppTheme.TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="AppTheme.TextAppearance.Button.White" parent="AppTheme.TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button.White.Invisible.Address" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_button_invisible_white_for_address</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button.White</item>
    </style>

</resources>
